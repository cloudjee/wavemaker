<project name="json" default="build" basedir=".">

    <property name="root.dir" location="../.."/>
    <import file="${root.dir}/common.build.xml"/>

    <property file="build.properties"/>


    <property name="antlr-source" value="src/com/wavemaker/json/core/json.g"/>
    <property name="antlr-parser" value="src/com/wavemaker/json/core/jsonParser.java"/>
    <property name="antlr-lexer" value="src/com/wavemaker/json/core/jsonLexer.java"/>
    <filelist id="antlr-targets">
        <file name="${antlr-lexer}"/>
        <file name="src/com/wavemaker/json/core/json.tokens"/>
        <file name="src/com/wavemaker/json/core/json__.g"/>
        <file name="${antlr-parser}"/>
    </filelist>

    <path id="build.classpath">
        <filelist refid="common.json.jars"/>
        <filelist refid="common.common.jars"/>
        <pathelement location="${classes.common.dir}"/>
    </path>

    <path id="test.build.classpath">
        <path refid="build.classpath"/>
        <pathelement location="${classes.json.dir}"/>
        <path location="${test.classes.common.dir}"/>
	<pathelement location="${junit.jar}"/>
    </path>

    <target name="help" depends="common.projecthelp" 
            description="Information about available targets"/>

    <target name="clean" description="Remove class files">
        <delete dir="${build.json.dir}"/>
        <delete file="${wmjson.jar}"/>
        <delete>
            <path>
                <filelist refid="antlr-targets"/>
            </path>
        </delete>
    </target> 

    <target name="gen-antlr-json" unless="gen-antlr-json-uptodate"
            depends="check-gen-antlr-json">
        <java fork="true" classname="org.antlr.Tool" failonerror="true">
            <classpath>
                <pathelement location="${antlr.jar}" />
                <pathelement location="${antlr3.jar}" />
                <pathelement location="${antlr3-runtime.jar}" />
                <pathelement location="${stringtemplate.jar}" />
            </classpath>

            <arg value="${antlr-source}"/>
        </java>
    </target>

    <target name="check-gen-antlr-json">
        <uptodate srcfile="${antlr-source}" targetfile="${antlr-parser}"
            property="gen-antlr-json-uptodate"/>
        <uptodate srcfile="${antlr-source}" targetfile="${antlr-lexer}"
            property="gen-antlr-json-uptodate"/>
    </target>

    <target name="build" description="Compile runtime" depends="gen-antlr-json">
		<mkdir dir="${src.temp.root.dir}/json"/>
		<copy todir="${src.temp.root.dir}/json" overwrite="yes">
			<fileset dir="${src.json.dir}">
			</fileset>
		</copy>
		<antcall target="overwrite-with-dummies"/>
        <mkdir dir="${classes.json.dir}"/>
        <javac srcdir="${src.temp.root.dir}/json" 
               destdir="${classes.json.dir}" 
               target="${javac.target}"
               encoding="${javac.encoding}"
               debug="${javac.debug}">
            <classpath refid="build.classpath"/>
        </javac>
        <copy todir="${classes.json.dir}">
            <fileset dir="${src.json.dir}">
                <include name="**/*.properties"/>
                <include name="**/*.xml"/>
            </fileset>
        </copy>		
    </target>

	<target name="overwrite-with-dummies" unless="common.modules.isEnterprise" 
		description="Copy dummy java source to temp dir">
        <copy todir="${src.temp.root.dir}/json" overwrite="yes">
            <fileset dir="${src.json.dummy.dir}">
            </fileset>
        </copy>
	</target>

    <target name="buildtest" depends="build" description="Compile tests">
        <mkdir dir="${test.classes.json.dir}"/>
        <javac srcdir="${test.src.json.dir}" 
               destdir="${test.classes.json.dir}" 
               target="${javac.target}"
               encoding="${javac.encoding}"
               debug="${javac.debug}">
            <classpath refid="test.build.classpath"/>
        </javac>        
    </target>

    <target name="jar" depends="build">
        <pathconvert refid="common.json.jars" pathsep=" " property="cp">
            <mapper type="flatten"/>
        </pathconvert>
        <mkdir dir="${lib.dir}"/>
        <jar destfile="${wmjson.jar}"
                basedir="${classes.json.dir}">
            <manifest>
                <attribute name="Class-Path" value="${cp}"/>
            </manifest>
        </jar>
    </target>

    <target name="test" depends="buildtest">
        <mkdir dir="${build.test.report.dir}"/>
        <property name="test.include" value="**/*Test*"/>
        <property name="test.exclude" value=""/>
        <junit printsummary="on"
               fork="true"
               forkmode="once"
               haltonfailure="false"
               showoutput="true">
            <classpath>
                <path refid="test.build.classpath"/>
                <pathelement location="${test.classes.json.dir}"/>
            </classpath>
            <formatter type="plain" usefile="false"/>
            <formatter type="xml" usefile="true"/>
            <batchtest todir="${build.test.report.dir}">
                <fileset dir="${test.classes.json.dir}">
                    <include name="${test.include}"/>
                    <exclude name="${test.exclude}"/>
                    <exclude name="com/wavemaker/**/infra/**"/>
                    <exclude name="**/*$*"/>
                </fileset>
            </batchtest>

            <syspropertyset>
                <propertyset refid="common.test.properties"/>
            </syspropertyset>
        </junit>    
    </target>

</project>
